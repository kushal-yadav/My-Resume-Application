<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myresumeapp.MainActivity" 
    android:background="@drawable/me5"
    android:soundEffectsEnabled="true">
    
        
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="bold"
        
        android:text="About Me" />
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:src="@drawable/photo" />
    <TextView     
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv1"
        android:layout_marginTop="25dp"
       
        android:textStyle="italic"
        android:text="			      I am KUSHAL YADAV, Computer Engineering student of RAJIV GANDHI INSTITUTE OF TECHNOLOGY, ANDHERI currently studying in FOURTH YEAR SEMESTER VII.                          
            All Information in The Resume Is True And As Per Best Of My Knowledge For Getting Benefited Of Internship,Training And Job Opportunities Offered By Pretigious Companies And Industrial Institutes."
        android:textSize="20sp"/>
    
</RelativeLayout>
</ScrollView>